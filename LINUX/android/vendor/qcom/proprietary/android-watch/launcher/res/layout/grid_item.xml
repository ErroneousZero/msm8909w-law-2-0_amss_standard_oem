<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="@dimen/grid_image_width"
        android:layout_height="@dimen/grid_image_height"
        android:padding="@dimen/grid_image_padding"/>
    <TextView
        android:id="@+id/icon_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/grid_text_height"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:textSize="@dimen/grid_text_size"/>
</LinearLayout>