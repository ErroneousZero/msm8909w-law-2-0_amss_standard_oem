<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".AlarmHomeActivity">

    <TextView android:text="@string/alarm_home_list_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_bright"/>

    <View
        style="@style/HorizontalDivider"
        android:id="@+id/textListSeparator"
        android:layout_below="@+id/textView"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textListSeparator"
        android:layout_centerHorizontal="true"
/>

</RelativeLayout>