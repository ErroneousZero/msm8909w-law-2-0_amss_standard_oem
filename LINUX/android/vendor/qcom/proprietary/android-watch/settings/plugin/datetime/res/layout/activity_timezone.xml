<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameTextView"
        android:textSize="@dimen/title_text_size"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeZone"
        android:layout_marginTop="@dimen/timezone_textview_margin_top"
        android:layout_marginBottom="@dimen/timezone_textview_margin_bottom"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textListSeparator1" />
    <ListView
        android:id="@+id/listViewTimeZoneSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textListSeparator2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/list_view_margin_top" />
</RelativeLayout>
