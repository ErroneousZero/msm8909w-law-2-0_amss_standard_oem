<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/sim_status_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameTextView"
        android:textSize="@dimen/sim_status_title_text_size"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/sim_status_title_padding_top"
        android:paddingBottom="@dimen/sim_status_title_padding_bottom"/>

    <ListView
        android:id="@+id/listViewSimStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@+id/appNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/list_view_margin_top" />

</RelativeLayout>
