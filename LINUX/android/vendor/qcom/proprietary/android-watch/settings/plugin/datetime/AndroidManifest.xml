<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.qti.settings.watchdatetime"
    android:sharedUserId="android.uid.system">

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.SET_TIME_ZONE" />
    <uses-permission android:name="android.permission.SET_TIME" />

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.DateTimeSettings"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.settings.DATE_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
       </activity>
       <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.TimeZoneSettings"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.DateTimeData"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
       </activity>
        <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.DateTimeArrayAdapter"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
       </activity>
        <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.DateTimeClickListener"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
       </activity>
        <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.DatePickerActivity"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
       </activity>
        <activity
            android:name="com.qualcomm.qti.settings.watchdatetime.TimePickerActivity"
            android:launchMode="singleTask" >
            <intent-filter android:priority="2">
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
       </activity>
    </application>

</manifest>
