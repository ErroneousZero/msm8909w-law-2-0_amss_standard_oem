<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMenuTitle"
        android:textSize="20sp"
        android:singleLine="true"
        android:textColor="@android:color/holo_blue_bright"
        android:text="@string/activity_title"
        android:layout_marginBottom="@dimen/title_bottom"
        />

    <TextView
        android:id="@+id/apmMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:singleLine="true"
        android:minHeight="30dp"
        android:layout_below="@+id/editTextMenuTitle"
        android:layout_marginLeft="10dp" />

    </LinearLayout>

    <View
        style="@style/HorizontalDivider"
        android:id="@+id/textListSeparator"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="@dimen/divider_bottom"
        />

</RelativeLayout>
