<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/cellular_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameTextView"
        android:textSize="@dimen/cellular_data_title_text_size"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true"/>

    <View
        style="@style/HorizontalDivider"
        android:id="@+id/textListSeparator"
        android:layout_below="@+id/appNameTextView" />

    <ListView
        android:id="@+id/listViewCellularData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textListSeparator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/list_view_margin_top" />

</RelativeLayout>
