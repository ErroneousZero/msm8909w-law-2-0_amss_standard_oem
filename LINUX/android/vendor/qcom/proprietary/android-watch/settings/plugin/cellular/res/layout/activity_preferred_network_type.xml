<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/preferred_network_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/preferred_nw_type_title_text_size"
        android:textColor="@android:color/holo_blue_bright" />

    <View
        style="@style/HorizontalDivider"
        android:id="@+id/textListSeparator"
        android:layout_below="@+id/textView" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:layout_below="@+id/textListSeparator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pref_list_view_margin_top" />

</RelativeLayout>
