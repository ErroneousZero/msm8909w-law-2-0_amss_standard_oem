<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameTextView"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true"/>

    <View
        style="@style/HorizontalDivider"
        android:id="@+id/textListSeparator"
        android:layout_below="@+id/appNameTextView" />

    <ListView
        android:id="@+id/listViewNfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textListSeparator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/list_view_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/androidBeamHint"
        android:layout_below="@+id/listViewNfc"
        android:textSize="@dimen/nfc_list_item_text2_size"
        android:layout_centerHorizontal="true"
        android:text="@string/android_beam_help"
        android:paddingRight="@dimen/nfc_text_view_padding"
        android:paddingLeft="@dimen/nfc_text_view_padding" />

</RelativeLayout>
