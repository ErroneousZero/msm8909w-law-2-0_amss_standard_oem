<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nfc_text1_view_layout_height"
        android:id="@+id/text1"
        android:textSize="@dimen/nfc_list_item_text1_size"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/nfc_text_view_padding_left"
        android:paddingBottom="@dimen/nfc_text1_view_padding_bottom"
        android:paddingTop="@dimen/nfc_text1_view_padding_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nfc_text2_view_layout_height"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:textSize="@dimen/nfc_list_item_text2_size"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/nfc_text_view_padding_left"
        android:paddingBottom="@dimen/nfc_text2_view_padding_bottom"
        android:paddingTop="@dimen/nfc_text2_view_padding_top" />

</RelativeLayout>

