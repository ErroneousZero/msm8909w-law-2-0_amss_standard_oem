<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sms_display_title_padding_bottom"
            android:paddingLeft="@dimen/sms_display_title_padding_left"
            android:paddingTop="@dimen/sms_display_title_padding_top"
            android:text="@string/sms_display_title_text"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="@dimen/sms_display_title_text_size" />

        <TextView
            android:id="@+id/msgContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:paddingLeft="@dimen/sms_contents_padding_left"
            android:paddingTop="@dimen/sms_contents_padding_top"
            android:singleLine="false"
            android:textSize="@dimen/sms_contents_text_size" />

        <Button
        android:id="@+id/replyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgContents"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/send_button_margin_top"
        android:text="@string/reply_button_text"
        android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>
