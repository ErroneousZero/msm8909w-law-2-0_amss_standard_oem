<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msgFrom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/msg_from_layout_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/msg_from_padding_left"
        android:paddingTop="@dimen/msg_from_padding_top"
        android:singleLine="true"
        android:textSize="@dimen/msg_from_text_size" />

    <TextView
        android:id="@+id/msgText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/msg_text_layout_height"
        android:layout_below="@+id/msgFrom"
        android:paddingLeft="@dimen/msg_text_padding_left"
        android:paddingTop="@dimen/msg_text_padding_top"
        android:singleLine="true"
        android:textSize="@dimen/msg_text_text_size" />

    <TextView
        android:id="@+id/msgStatus"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/msg_status_layout_height"
        android:layout_below="@+id/msgText"
        android:paddingLeft="@dimen/msg_status_padding_left"
        android:paddingTop="@dimen/msg_status_padding_top"
        android:singleLine="true"
        android:textSize="@dimen/msg_status_text_size"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/msgDateTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/msg_date_time_layout_height"
        android:layout_below="@+id/msgText"
        android:layout_marginStart="@dimen/msg_date_time_layout_margin_start"
        android:layout_toEndOf="@id/msgStatus"
        android:paddingTop="@dimen/msg_date_time_padding_top"
        android:singleLine="true"
        android:textSize="@dimen/msg_date_time_text_size"
        android:textStyle="italic" />

</RelativeLayout>
