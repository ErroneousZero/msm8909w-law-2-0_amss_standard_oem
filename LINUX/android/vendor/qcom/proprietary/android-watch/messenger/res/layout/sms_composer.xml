<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msgToTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/msg_to_title_margin_top"
        android:text="@string/msg_to_title_text"
        android:textSize="@dimen/msg_to_title_text_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/phone_num_layout_height"
        android:layout_below="@+id/msgToTitle"
        android:hint="@string/phone_num_hint_text"
        android:inputType="number"
        android:gravity="center"/>

    <TextView
        android:id="@+id/msgTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/msg_body_title_margin_top"
        android:text="@string/msg_body_title_text"
        android:textSize="@dimen/msg_body_title_text_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/msgBody"
        android:layout_width="match_parent"
        android:layout_height="@dimen/msg_body_layout_height"
        android:layout_below="@+id/msgTextTitle"
        android:hint="@string/msg_body_hint_text"
        android:inputType="textCapSentences|textAutoCorrect" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgBody"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/send_button_margin_top"
        android:text="@string/send_button_text"
        android:textStyle="bold" />

</RelativeLayout>
