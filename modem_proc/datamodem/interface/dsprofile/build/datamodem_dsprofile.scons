#-------------------------------------------------------------------------------
# Setup source PATH
#-------------------------------------------------------------------------------
SRCPATH = ".."

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

#-------------------------------------------------------------------------------
# Generate source and add to an image
#-------------------------------------------------------------------------------
DSPROFILE_FILES = glob(SRCPATH + '/src/*.c')
DSPROFILE_SOURCES = []

for filename in DSPROFILE_FILES:
   DSPROFILE_SOURCES.append('${BUILDPATH}/' + filename.replace(SRCPATH,''))

env.AddLibrary(['MODEM_MODEM', 'MOB_DATAMODEM'], '${BUILDPATH}/dsprofile',[DSPROFILE_SOURCES, ])
